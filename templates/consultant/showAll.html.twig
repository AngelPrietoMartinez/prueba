{% extends 'base.html.twig' %}


{% block body %}

    {% if candidates %}

        <div class="container table-responsive mt-4">
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom de Famille</th>
                    <th scope="col">email</th>
                    <th scope="col">Date de création</th>
                    <th scope="col">Status</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for candidate in candidates %}
                    <tr>
                        <th scope="row">{{ candidate.id }}</th>
                        <td>{{ candidate.firstName }}</td>
                        <td>{{ candidate.lastName }}</td>
                        <td>{{ candidate.createdAt|date('d/m/Y') }}</td>
                        <td>{{ candidate.email }}</td>
                        <th scope="col">
                            {% if candidate.isVerified == false %}
                                Compte à vérifier
                            {% else %}
                                Compte déjà vérifier
                            {% endif %}
                        </th>
                        <th>
                            <a href="{{ path('consultant_show_candidate', {'idCandidate': candidate.id}) }}" class="btn btn-info">Vérifier le compte</a>
                        </th>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>

    {% endif %}

{% endblock %}